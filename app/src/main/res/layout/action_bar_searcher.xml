<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/action_bar_searcher"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:minHeight="56dp"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp"
    android:elevation="10dp"
    app:elevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/yellow_ml"
            android:gravity="start"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:id="@+id/searcher"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/background_searcher"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/search_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/ic_search_24px"
                    android:backgroundTint="@color/gray_text"
                    android:padding="5dp"
                    app:tint="@color/white" />

                <EditText
                    android:id="@+id/search_box"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical|start"
                    android:hint="@string/search_on_ML"
                    android:lines="1"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray_text"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="12dp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp">

            <TextView
                android:id="@+id/result_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/gray_text" />


        </LinearLayout>
    </LinearLayout>

</androidx.appcompat.widget.Toolbar>